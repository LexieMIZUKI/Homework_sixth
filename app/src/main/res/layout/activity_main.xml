<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e8e8e5"
    tools:context="com.lexieluv.homeworksixth.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="#7489ab"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="3"
            android:background="#baccde"
            android:layout_marginRight="3dp">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="此处为图书封面"
                android:gravity="left"
                android:layout_weight="2"
                android:background="#7ba8b0"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="书名"
                android:gravity="left"
                android:background="#bfd9d4"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="3"
            android:background="#2e4d5c">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="概述"
                android:gravity="left"
                android:background="#bfd9d4"
                android:layout_marginBottom="5dp"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="作者"
                android:gravity="left"
                android:background="#bfd9d4"
                android:layout_marginBottom="5dp"/>
            <Button
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="日期"
                android:gravity="left"
                android:background="#bfd9d4"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
    </LinearLayout>
